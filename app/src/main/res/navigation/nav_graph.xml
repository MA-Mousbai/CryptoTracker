<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/CryptoListFragment">

    <fragment
        android:id="@+id/CryptoListFragment"
        android:name="com.mousbai.cryptotracker.presentation.list.CryptoListFragment"
        android:label="First Fragment"
        tools:layout="@layout/fragment_crypto_list">

        <action
            android:id="@+id/navigateToCryptoDetailFragment"
            app:destination="@id/CryptoDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/CryptoDetailFragment"
        android:name="com.mousbai.cryptotracker.presentation.detail.CryptoDetailFragment"
        android:label="Second Fragment"
        tools:layout="@layout/fragment_crypto_detail">

        <action
            android:id="@+id/navigateToCryptoListFragment"
            app:destination="@id/CryptoListFragment" />
    </fragment>
</navigation>